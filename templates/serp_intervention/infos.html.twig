<link rel="stylesheet" href="{{ asset('css/serp_intervention/info.style.css') }}">

<div class="modal modal-xl fade" id="modale-formulaire-intervention" tabindex="-1" aria-labelledby="titre-modale-intervention" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titre-modale-intervention">{# titre modale #}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="corps-modale-intervention">
          {# corps modale #}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped">
    <thead class="align-middle">
        <tr>
            <th scope="col">Type d'intervention</th>
            <th scope="col">Id. machine</th>
            <th scope="col">Intervenant</th>
            <th scope="col">Début</th>
            <th scope="col">Fin</th>
            <th scope="col">Observation</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody id="body-info" class="align-middle">
        {% if interventions|length < 1 %}
            <tr class="row-intervention">
                <td colspan="8">Aucune intervention disponible</td>
            </tr>
        {% else %}
            {% for intervention in interventions %}
                <tr class="row-intervention">
                    <td>{{ intervention.getIdTypeIntervention.nom }}</td>
                    <td>{{ intervention.getIdMachine.nom }}</td>
                    <td>{{ intervention.getIdIntervenant.nom }} {{ intervention.getIdIntervenant.prenom }}</td>
                    <td>{{ intervention.getDateDebut|date("d/m/Y H:i") }}</td>
                    <td>{{ intervention.getDateFin|date("d/m/Y H:i") }}</td>
                    <td>{{ intervention.getObservation }}</td>
                    <td>
                        <button class="btn btn-primary edite-intervention" data-id="{{ intervention.id }}">Editer</button>
                    </td>
                    <td>
                        <button class="btn btn-danger efface-intervention" data-id="{{ intervention.id }}">Effacer</button>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        <tr id="tr-valide">
            <td colspan="8">
                <button class="btn btn-primary" id="cree-intervention">Créer une nouvelle intervention</button>
            </td>
        </tr>
    </tbody>
</table>
<script src="{{ asset('toastr/toastr.js') }}"></script>
<script src="{{asset('js/serp_intervention/info.script.js')}}"></script>
<script>
    let route_get_intervention = '{{ path("cree_intervention") }}';
    let route_get_edite_intervention = '{{ path("edite_intervention") }}';
    let route_efface_intervention = '{{ path("efface_intervention") }}';
</script>
