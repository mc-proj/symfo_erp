<table class="table table-striped">
    <thead class="align-middle">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody id="body-info" class="align-middle">
        {% if machines|length < 1 %}
            <tr class="row-machine">
                <td colspan="7">Aucune machine disponible</td>
            </tr>
        {% else %}
            {% for machine in machines %}
                <tr class="row-machine">
                    <td>{{ machine.nom }}</td>
                    <td>
                        <button class="btn btn-primary edite-machine" data-id="{{ machine.id }}">Editer</button>
                    </td>
                    <td>
                        <button class="btn btn-danger efface-machine" data-id="{{ machine.id }}">Effacer</button>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        <tr id="tr-valide">
            <td colspan="7">
                <button class="btn btn-primary" id="cree-machine">Cr√©er une nouvelle machine</button>
            </td>
        </tr>
    </tbody>
</table>
